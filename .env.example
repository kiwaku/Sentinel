# Sentinel Environment Variables
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# Multiple Email Accounts Configuration
# You can define multiple source emails directly in the .env file
# Format: SOURCE_EMAIL_{number}_{parameter}
# Required parameters: USERNAME, PASSWORD
# Optional parameters: NAME, IMAP_SERVER, IMAP_PORT, SMTP_SERVER, SMTP_PORT, USE_OAUTH

# Source Email Account #1
SOURCE_EMAIL_1_NAME=Work Email
SOURCE_EMAIL_1_USERNAME=your-work-email@gmail.com
SOURCE_EMAIL_1_PASSWORD=your-app-specific-password
SOURCE_EMAIL_1_IMAP_SERVER=imap.gmail.com
SOURCE_EMAIL_1_SMTP_SERVER=smtp.gmail.com

# Source Email Account #2
SOURCE_EMAIL_2_NAME=Personal Email
SOURCE_EMAIL_2_USERNAME=your-personal-email@gmail.com
SOURCE_EMAIL_2_PASSWORD=your-app-specific-password
# You can omit server settings to use defaults (Gmail)

# Legacy Single Email Configuration (still supported)
# EMAIL_USERNAME=your-email@gmail.com
# EMAIL_PASSWORD=your-app-specific-password
# EMAIL_IMAP_SERVER=imap.gmail.com
# EMAIL_SMTP_SERVER=smtp.gmail.com

# LLM Configuration  
LLM_API_KEY=your-together-ai-api-key
LLM_MODEL=together_ai/deepseek-ai/DeepSeek-R1-Distill-Llama-70B-free

# Summary Email (where to send reports)
SUMMARY_RECIPIENT_EMAIL=your-email@gmail.com

# Optional: Database paths (if you want to customize)
# DATABASE_PATH=data/sentinel.db
# LOGS_DIRECTORY=logs/